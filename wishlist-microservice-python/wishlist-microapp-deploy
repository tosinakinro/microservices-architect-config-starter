k8s apiVersion: apps/v1
kind: Deployment
metadata:
  name:  "microapp-wishlist"
  namespace: default
  labels:
    app:  "microapp-wishlist"
spec:
  selector:
    matchLabels:
      app: "microapp-wishlist"
  replicas: 2
  strategy:
    rollingUpdate:
      maxSurge: 50%
      maxUnavailable: 0%
    type: RollingUpdate
  template:
    metadata:
      labels:
        app:  "microapp-wishlist"
    spec:
      containers:
      - name:  "microapp-wishlist"
        image:  oluwatoseen/microapp-wishlist
        resources:
          requests:
            cpu: 50m
            memory: 500Mi
          limits:
            cpu: 100m
            memory: 100Mi
        ports:
        - containerPort:  80
          name:  "microapp-wishlist"


apiVersion: v1
kind: Service
metadata:
  name: "microapp-wishlist"
  namespace: default
spec:
  selector:
    app: "microapp-wishlist"
  type: LoadBalancer
  ports:
  - name: "microapp-wishlist"
    protocol: TCP
    port: 80

